.myBlogNav {
  width: 100%;
  background-color: #232E3C;
}
.myBlogNav .myBlogwrap {
  width: 1214px;
  height: 100px;
  line-height: 100px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.myBlogNav .myBlogwrap .blogtitle {
  line-height: 28px;
  font-size: 28px;
  color: #ffffff;
  margin-left: 10px;
}
.myBlogNav .myBlogwrap .myblogbtn {
  height: 28px;
  line-height: 22px;
  border-radius: 4px;
  margin-right: 10px;
  background-color: #fff;
  border-style: none;
  cursor: pointer;
}
.myBlogBody {
  width: 1124px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}
.myBlogBody .myBlogBody-l {
  width: 300px;
  flex: 1 1 300px;
}
.myBlogBody .myBlogBody-l .l-top {
  width: 300px;
  height: 80px;
  border-bottom: 1px solid #cccccc;
  background-color: #fff;
  padding: 20px;
}
.myBlogBody .myBlogBody-l .l-top .username {
  font-size: 24px;
  font-weight: bold;
  margin-left: 10px;
}
.myBlogBody .myBlogBody-l .l-middle {
  width: 300px;
  height: 76px;
  border-bottom: 1px solid #cccccc;
  background-color: #ffffff;
  padding: 20px;
}
.myBlogBody .myBlogBody-l .l-middle .l-middlelist {
  display: flex;
  justify-content: space-around;
}
.myBlogBody .myBlogBody-l .l-middle .l-middlelist li {
  width: 70px;
  line-height: 22px;
}
.myBlogBody .myBlogBody-l .l-middle .l-middlelist li p {
  width: 70px;
  height: 22px;
  text-align: center;
  font-weight: bold;
  margin-bottom: 0px;
}
.myBlogBody .myBlogBody-l .l-bottom {
  width: 300px;
  height: 90px;
  border-bottom: 1px solid #cccccc;
  background-color: #ffffff;
  padding: 20px;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.myBlogBody .myBlogBody-l .l-bottom p {
  width: 128px;
}
.myBlogBody .myBlogBody-l .l-hot {
  width: 300px;
  height: 138px;
  padding: 10px 20px 0 20px;
  background: #fff;
  line-height: 38px;
  position: relative;
}
.myBlogBody .myBlogBody-l .l-hot .l-hottext {
  display: inline-block;
  height: 38px;
  margin-left: 10px;
  line-height: 38px;
  font-size: 16px;
  font-weight: blod;
  color: #000000;
}
.myBlogBody .myBlogBody-l .l-hot::before {
  content: "";
  height: 24px;
  width: 6px;
  background: red;
  position: absolute;
  left: 14px;
  top: 14px;
}
.myBlogBody .myBlogBody-r {
  margin-left: 10px;
  width: 900px;
  flex: 1 3 900px;
}
.myBlogBody .myBlogBody-r .r-title {
  height: 48px;
  background-color: #fff;
  padding: 0 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #cccccc;
}
.myBlogBody .myBlogBody-r .r-title .r-title-r {
  width: 380px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.myBlogBody .myBlogBody-r .r-title .r-title-r .typelist > li {
  display: inline-block;
  margin-right: 10px;
  margin-top: 14px;
  cursor: pointer;
}
.myBlogBody .myBlogBody-r .r-title .r-title-r .typelist > li.actived {
  color: red;
}
.myBlogBody .myBlogBody-r .myBlogwrap {
  height: 395px;
  background-color: #fff;
}
